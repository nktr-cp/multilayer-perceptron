{
  "name": "multilayer-perceptron-wasm",
  "version": "0.1.0",
  "description": "WebAssembly bindings for multilayer perceptron neural network",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "wasm-pack build --no-opt --target web --out-dir pkg",
    "build:node": "wasm-pack build --no-opt --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --no-opt --target bundler --out-dir pkg-bundler", 
    "dev": "webpack serve --mode development",
    "build:demo": "webpack --mode production",
    "build:pages": "cross-env BUILD_TARGET=pages webpack --mode production",
    "build:wasm": "cross-env RUSTFLAGS=\"--cfg=web_sys_unstable_apis\" wasm-pack build --no-opt --target web --out-dir pkg --release && wasm-opt -Os --enable-bulk-memory --enable-reference-types pkg/multilayer_perceptron_bg.wasm -o pkg/multilayer_perceptron_bg.wasm",
    "build:wasm:dev": "cross-env RUSTFLAGS=\"--cfg=web_sys_unstable_apis\" wasm-pack build --no-opt --target web --out-dir pkg",
    "predeploy": "npm run build:wasm && npm run build:pages",
    "deploy:local": "npm run predeploy && npm run serve",
    "test": "wasm-pack test --headless --firefox",
    "test:chrome": "wasm-pack test --headless --chrome",
    "serve": "python3 -m http.server 8000",
    "serve:dist": "cd dist && python3 -m http.server 8000",
    "clean": "rm -rf pkg pkg-node pkg-bundler dist",
    "optimize": "wasm-opt -Os --enable-bulk-memory --enable-reference-types pkg/multilayer_perceptron_bg.wasm -o pkg/multilayer_perceptron_bg.wasm"
  },
  "devDependencies": {
    "@wasm-tool/wasm-pack-plugin": "^1.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.5.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "files": [
    "pkg/**/*",
    "index.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nktr-cp/multilayer-perceptron.git"
  },
  "keywords": [
    "wasm",
    "webassembly", 
    "neural-network",
    "machine-learning",
    "rust"
  ],
  "author": "nktr-cp",
  "license": "MIT OR Apache-2.0"
}
